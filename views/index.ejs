<%- include('layout/header') %>

<div class="container">
    <div class="row mt-4 mb-4">
        <div class="col-lg-12">
           <div class="table-responsive">
               <table class="table table-striped">
                <thead>
                    <tr class="table-dark">
                        <th>ID</th>
                        <th>Image</th>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                 
                  <% users.forEach((row,index)=>{ %> 
                    <tr>
                        <td><%= index %> </td>
                        <td><img src="<%= row.image %>" width="1000px"></td>
                        <td><%= row.name %> </td>
                        <td><%= row.email %> </td>
                        <td><%= row.phone %> </td>
                        <td><a href="/edit/<%  row._id  %> " class="text-success"><i class="fa-solid fa-pen"></i></a>
                            <a href="/delete/<% row._id  %> " class="text-danger "><i class="fa-solid fa-trash-can mx-3"></i></a></td>
                    </tr>
                  <% }) %> 
                </tbody>
               </table>
           </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %> 